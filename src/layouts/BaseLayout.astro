---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "My awesome blog powered by Astro" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <meta name="description" content={description} />
  <title>{title}</title>
</head>
<body class="font-sans bg-base text-text min-h-screen">
  <div class="max-w-4xl mx-auto px-6 py-8">
    <header class="border-b border-surface0 pb-6 mb-12">
      <nav class="flex justify-between items-center">
        <a href="/" class="font-bold text-2xl text-text no-underline hover:text-blue transition-colors duration-300 animate-fade-in">
          My Blog
        </a>
        <div class="flex space-x-6">
          <a href="/" class="text-text no-underline hover:text-mauve transition-all duration-300 hover:scale-105 relative group">
            Home
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-mauve transition-all duration-300 group-hover:w-full"></span>
          </a>
          <a href="/blog" class="text-text no-underline hover:text-blue transition-all duration-300 hover:scale-105 relative group">
            Blog
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-blue transition-all duration-300 group-hover:w-full"></span>
          </a>
        </div>
      </nav>
    </header>
    <main class="min-h-[70vh] animate-fade-in">
      <slot />
    </main>
    <footer class="border-t border-surface0 pt-6 mt-16 text-center">
      <p class="text-subtext1 text-sm">
        &copy; 2025 My Blog. Built with
        <span class="text-peach font-medium">Astro</span>
        & styled with
        <span class="text-mauve font-medium">Catppuccin</span>.
      </p>
    </footer>
  </div>
</body>
</html>
