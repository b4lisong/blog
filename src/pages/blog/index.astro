---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="All Blog Posts">
  <h1 class="text-3xl font-bold mb-8 text-gray-900">All Blog Posts</h1>

  {sortedPosts.length > 0 ? (
    <div class="flex flex-col gap-8">
      {sortedPosts.map((post) => (
        <article class="pb-6 border-b border-gray-200 last:border-b-0">
          <a href={`/blog/${post.slug}/`} class="no-underline text-inherit block">
            <h2 class="text-2xl font-semibold mb-2 text-gray-800 transition-colors duration-200 hover:text-gray-600">{post.data.title}</h2>
            <p class="mb-2 text-gray-600">{post.data.description}</p>
            <div class="flex justify-between items-center gap-4">
              <time class="text-sm text-gray-500">{post.data.pubDate.toLocaleDateString()}</time>
              {post.data.tags && (
                <div class="flex gap-2 flex-wrap">
                  {post.data.tags.map((tag) => (
                    <span class="bg-gray-100 px-2 py-1 rounded text-xs text-gray-600">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </a>
        </article>
      ))}
    </div>
  ) : (
    <p class="text-gray-600">No posts published yet.</p>
  )}
</BaseLayout>