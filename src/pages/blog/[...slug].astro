---
import { type CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title}>
  <article class="max-w-4xl mx-auto animate-fade-in">
    <header class="mb-12 pb-8 border-b border-surface0">
      <h1 class="text-4xl font-bold text-text mb-6 leading-tight">
        {post.data.title}
      </h1>
      <div class="flex flex-wrap justify-between items-center gap-4 mb-6">
        <time class="text-subtext1 bg-surface0 px-4 py-2 rounded-full text-sm">
          {post.data.pubDate.toLocaleDateString('en-us', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex gap-2 flex-wrap">
            {post.data.tags.map((tag) => (
              <span class="bg-gradient-to-r from-mauve/20 to-blue/20 border border-mauve/30 text-mauve px-3 py-1 rounded-full text-xs font-medium">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
      {post.data.description && (
        <p class="text-lg text-subtext1 italic leading-relaxed">
          {post.data.description}
        </p>
      )}
    </header>

    <div class="prose prose-lg prose-invert max-w-none">
      <Content />
    </div>

    <footer class="mt-16 pt-8 border-t border-surface0">
      <a href="/blog" class="inline-flex items-center gap-2 text-blue hover:text-mauve transition-colors duration-300 font-medium">
        ‚Üê Back to all posts
      </a>
    </footer>
  </article>
</BaseLayout>

