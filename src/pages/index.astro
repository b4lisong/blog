---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const recentPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3); // Show only latest 3 posts on homepage
---

<BaseLayout title="balisong.dev">
  <section class="text-center my-16 animate-fade-in">
    <h1 class="text-5xl font-bold mb-4 text-text">
      hello, I'm balisong!
    </h1>
    <p class="text-lg text-subtext1 mb-6">
      AI | infosec | devsecops | homelab
    </p>
    <div class="mt-8">
      <Navigation variant="hero" />
    </div>
  </section>

  <section class="animate-slide-up">
    <div class="flex items-center gap-3 mb-8">
      <h2 class="text-3xl font-bold text-text">recent posts</h2>
      <div class="h-1 flex-1 bg-gradient-to-r from-surface0 to-transparent rounded"></div>
    </div>

    {recentPosts.length > 0 ? (
      <div class="grid gap-6 mb-12">
        {recentPosts.map((post, index) => (
          <article class="group bg-mantle border border-surface0 p-8 rounded-xl transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl hover:border-surface1 animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
            <a href={`/blog/${post.slug}/`} class="no-underline text-inherit block">
              <h3 class="text-2xl font-bold mb-3 text-text group-hover:text-blue transition-colors duration-300">
                {post.data.title}
              </h3>
              <p class="mb-4 text-subtext1 leading-relaxed line-clamp-2">
                {post.data.description}
              </p>
              <div class="flex justify-between items-center">
                <time class="text-sm text-subtext1 bg-surface0 px-3 py-1 rounded-full">
                  {post.data.pubDate.toLocaleDateString()}
                </time>
                <span class="text-mauve text-sm font-medium group-hover:text-blue transition-colors duration-300">
                  Read more ‚Üí
                </span>
              </div>
            </a>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-16">
        <div class="text-6xl mb-4">üìù</div>
        <p class="text-text text-lg">No posts yet. Check back soon!</p>
      </div>
    )}

    {recentPosts.length > 0 && (
      <div class="text-center">
        <a href="/blog" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-mauve to-blue text-crust no-underline rounded-lg font-semibold transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-mauve/25">
          View all posts
          <span class="text-lg">‚Üí</span>
        </a>
      </div>
    )}
  </section>
</BaseLayout>
